FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY frontend/package*.json ./
RUN npm ci

# Copy project files
COPY frontend/ .

# Build the frontend with API URL if provided at build-time
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}
RUN echo "Using VITE_API_URL=$VITE_API_URL" && npm run build

EXPOSE 5173

CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "5173"]

